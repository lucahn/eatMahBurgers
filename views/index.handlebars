<h1>Header1!</h1>

<h2>Waiting!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burgerz eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burgerz eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Label:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
